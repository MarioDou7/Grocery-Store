               </GridPane.margin>
            </TextField>
            <TextField fx:id="hoursTextField" editable="false" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets left="90.0" right="20.0" top="100.0" />
               </GridPane.margin>
            </TextField>
