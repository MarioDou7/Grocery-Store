               <GridPane.margin>
                  <Insets left="20.0" top="23.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="nameTextField" editable="false" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets left="90.0" right="20.0" top="20.0" />
               </GridPane.margin></TextField>
            <Label text="Price:" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets left="20.0" top="63.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="priceTextField" editable="false" layoutX="674.0" layoutY="159.0" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets left="90.0" right="20.0" top="60.0" />
               </GridPane.margin>
            </TextField>
            <Label text="Stock:" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets left="20.0" top="103.0" />
               </GridPane.margin></Label>
            <TextField fx:id="stockTextField" editable="false" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.valignment="TOP">
               <GridPane.margin>
                  <Insets left="90.0" right="20.0" top="100.0" />
               </GridPane.margin>
            </TextField>
            <Button fx:id="newProductButton" mnemonicParsing="false" onAction="#newProduct" prefWidth="90.0" text="New Product" visible="false" GridPane.columnIndex="3" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
            <Button fx:id="saveButton" disable="true" mnemonicParsing="false" onAction="#save" prefWidth="90.0" text="Save" visible="false" GridPane.columnIndex="3" GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
            <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#delete" prefWidth="90.0" text="Delete" visible="false" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
            <Button id="My Cart" layoutX="494.0" layoutY="60.0" mnemonicParsing="false" onAction="#goToTransactions" text="My Cart" GridPane.columnIndex="2" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
